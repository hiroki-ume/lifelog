<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'layouts/error_messages', model: @user %>
    <%= form_for(@user) do |f|  %>

    <div class="field">
      <%= f.label "プロフィール画像" %><br>
      <%= f.attachment_field :profile_image %>
    </div>

    <div class="field">
      <%= f.label "名前" %><br>
      <%= f.text_field :name, class: "form" %>
    </div>

    <div class="field">
      <%= f.label "メールアドレス" %><br>
      <%= f.email_field :email, class: "form" %>
    </div>

    <div class="field">
      <%= f.label "自己紹介" %><br>
      <%= f.text_area :introduce, class: "form" %>
    </div>

    <div class="field">
      <%= f.label "メールでお知らせ" %>
      <%= f.check_box :send_mail, {}, :true, :false %>
    </div>

    <%= f.submit "プロフィールの更新", class: "btn btn-default" %>
    <% end %>
  </div>
</div>
