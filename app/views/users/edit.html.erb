<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f|  %>

    <div class="field">
      <%= f.label "名前" %><br>
      <%= f.text_field :name, class: "form" %>
    </div>

    <div class="field">
      <%= f.label "自己紹介" %><br>
      <%= f.text_area :introduce, class: "form" %>
    </div>

    <%= f.submit "プロフィールの更新" %>
    <% end %>
  </div>
</div>
