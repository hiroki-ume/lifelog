<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="registration-box">
      <h2>新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label "お名前" %><br>
          <%= f.text_field :name, class: "form" %>
        </div>

        <div class="field">
          <%= f.label "Eメール" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form" %>
        </div>

        <div class="field">
          <%= f.label "パスワード(確認)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
        </div>


        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-default" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
