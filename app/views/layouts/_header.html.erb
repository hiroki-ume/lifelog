<header>
  <div class="site-logo">
    <%= link_to 'LifeLog', root_path %>
  </div>
  <nav>
    <ul class="header-box">
    <% if user_signed_in? #ログインユーザーのみようこそ、と新規投稿を表示%>
      <li>ようこそ、<%= current_user.name %>さん!</li>
      <li><%= link_to "サイトについて", about_path %></li>
      <li><%= link_to "新規投稿", new_post_path %></li>
      <li><%= link_to "みんなの投稿", posts_path %></li>
      <li><%= link_to "マイページ", user_path(current_user) %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "サイトについて", about_path %></li>
      <li><%= link_to "みんなの投稿", posts_path %></li>
      <li><%= link_to "新規登録", new_user_registration_path %></li>
      <li><%= link_to "ログイン", new_user_session_path %></li>
    <% end %>
    </ul>
  </nav>
</header>
