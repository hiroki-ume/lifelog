<header>
  <div class="site-logo">
    <%= link_to 'LifeLog', '/top' %>
  </div>
  <nav>
    <ul class="header-link-box">
      <!-- admin用リンク -->
    <% if admin_signed_in? %>
      <li>管理者用画面</li>
      <li><%= link_to "ジャンル管理", admins_genres_path %></li>
      <li><%= link_to "お問い合わせ一覧", inquiries_path %></li>
      <li><%= link_to "管理者ログアウト", destroy_admin_session_path %></li>
    <%# #ログインユーザーのみ新規投稿、マイページのリンクを表示 %>
    <% elsif user_signed_in? %>
      <li><%= link_to "サイトについて", about_path %></li>
      <li><%= link_to "新規投稿", new_post_path %></li>
      <li><%= link_to "みんなの投稿", posts_path %></li>
      <li><%= link_to "マイページ", user_path(current_user) %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
    <%# 以下のリンクはログインしていなくても見れる %>
    <% else %>
      <li><%= link_to "サイトについて", about_path %></li>
      <li><%= link_to "みんなの投稿", posts_path %></li>
      <li><%= link_to "新規登録", new_user_registration_path %></li>
      <li><%= link_to "ログイン", new_user_session_path %></li>
    <% end %>
    </ul>
  </nav>
</header>
