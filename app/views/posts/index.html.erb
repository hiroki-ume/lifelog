<div class="row">
  <div class="col-md-2">
    <% if user_signed_in? %>
      <%= render "posts/sidebar" %>
    <% end %>
  </div>
  <div class="col-md-10">
    <% if @result.any? %>
      <%= render "posts/posts_index", posts: @result %>
    <% elsif @result.blank? %>
      <p>検索結果なし</p>
    <% else %>
      <%# 投稿の繰り返し表示 %>
      <%= render "posts/posts_index", posts: @posts %>
      <%= paginate @posts, class: "paginate" %>
    <% end %>
  </div>
</div>
