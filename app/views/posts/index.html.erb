<div class="row">
  <div class="col-md-2">
    <div class="sidebar">
      <div class="search_box">
        <%= form_tag :search_posts, method: :get do %>
          <%= text_field_tag "q", "", placeholder: "例）早起き" %>
          <%= submit_tag "検索" %>
          <p style="color: gray;">「気づき」または「すること」から検索できます</p>
        <% end %>
      </div>
      <div class="sidebar_link">
        <% if user_signed_in? %>
          <%= render "posts/sidebar" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-10">
    <% if @posts.blank? %>
      <p>検索結果なし</p>
    <% else %>
      <% @posts.each do |post| %>
        <div id="post_<%= post.id %>" class="post-box">
          <%= render "posts/post", post: post %>
        </div>
      <% end %>
      <%= paginate @posts, class: "paginate" %>
    <% end %>
  </div>
</div>
