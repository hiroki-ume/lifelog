<div class="wrapper">
  <div class="sidebar">
    <%= render "sidebar" %>
  </div>
  <div class="post-index">
    <% @favorites.each do |favorite| %>
      <% post = Post.find_by(id: favorite.post_id) %>
      <%# いいねされると、ajaxで投稿の内容が更新される %>
      <div id="post_<%= post.id %>" class="post-box">
        <%= render "posts/post", post: post %>
      </div>
    <% end %>
  </div>

  <!-- ページトップへ戻るボタン -->
  <span id="back">
    <a href="#">
      <i class="far fa-hand-point-up fa-3x"></i>
    </a>
  </span>
</div>
