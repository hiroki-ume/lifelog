<div class="form-box">
  <%= form_for(@post) do |f| %>
  <div class="field">
    <%= f.label "ジャンルを選択してください" %><br>
    <%= f.collection_select(:genre_id, @genres, :id, :name, class: "form") %>
  </div>


  <div class="field">
    <%= f.label "見たもの（本のタイトル、映画のタイトル）" %><br>
    <%= f.text_field :source, class: "form", placeholder: "50字以内" %>
  </div>

  <div class="field">
    <%= f.label "気づき（心に残った言葉、印象に残っていること）" %><span class="message-tag">必須</span><br>
    <%= f.text_area :word, class: "form", placeholder: "140字以内" %>
  </div>

  <div class="field">
    <%= f.label "今日からすること" %><br>
    <%= f.text_area :action, class: "form", placeholder: "100字以内" %>
  </div>

  <div class="field center">
    <%= f.check_box :publish_status, {}, :unpublish, :publish %>
    <%= f.label "公開しない" %>

  </div>

  <div class="field center">
    <%= f.check_box :send_mail, {}, "true", "false" %>
    <%= f.label "毎日メールでお知らせ" %><br>

  </div>

  <div class="action center">
    <%= f.submit 'posts', class: "btn btn-default", value: "投稿" %>
  </div>
  <% end %>
</div>
